<div class="container-fluid container-home">
  <div class="row profile">
    <div class="col-md-2"></div>
    <div class="col-md-2">
      <%= image_tag current_user.image, class: "img-circle img-thumbnail home-image" %>
    </div>
    <div class="col-md-4">
      <h1 class="home"> <%= current_user.nickname %></h1>
      <h2 class="home"> <%= current_user.name %></h2>
      <h4 class="home"> <%= current_user.email %> </h4>
      <h4 class="home"> <%= current_user.bio %> </h4>
      <h4 class="home"> <%= current_user.website %> </h4>

      <div class="row">
        <div class="col-md-4">
          <h4 class="following"><%= @user_data.counts[:media] %> posts</h4>
        </div>
        <div class="col-md-4">
          <h4 class="following"><%= @user_data.counts[:followed_by] %> followers</h4>
        </div>
        <div class="col-md-4">
          <h4 class="following"><%= @user_data.counts[:follows] %> following</h4>
        </div>
      </div>
    </div>
    <div class="col-md-2">
      <%= link_to "Logout", "/logout", class: "btn btn-lg btn-default btn-home" %>
    </div>
    <div class="col-md-2"></div>
  </div>
  <div class="row">
    <% @pictures.each do |picture| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= image_tag picture.images[:low_resolution][:url], class: "img-responsive" %>
          <div class="caption hide">
            <h4><%= picture.caption[:text] %></h4>
            <p>Likes:
              <%= picture.likes[:count] %> ||
              Comments:
              <%= picture.comments[:count] %></p>
              <p>Click for full info</p>
              <%= link_to "", users_picture_path(picture[:id]) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
